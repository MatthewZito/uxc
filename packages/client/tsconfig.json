{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
    "jsx": "react",
    "lib": [
			"DOM",
			"ESNext"
		],
		"types": [
      "vite/client",
			"node",
			"jest"
    ],
    "esModuleInterop": true,
    "strict": true,
		"resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
		"forceConsistentCasingInFileNames": true,
  },
	"include": ["src", "test", "*.ts"]
}
