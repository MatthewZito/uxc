  "license": "MIT",
  "author": "Matthew Zito (goldmund) <matthewtzito@gmail.com>",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "format": "prettier --write \"src/**/*.{ts,tsx,md,css,scss}\"",
    "serve": "vite preview",
    "lint": "eslint --ext .ts,.js,.tsx,.jsx,.json . --fix",
    "lint:css": "stylelint \"src/**/*.{css,scss,ts,tsx}\" --fix"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "pnpm format",
      "pnpm lint"
    ],
    "src/**/*.{css,scss}": [
      "pnpm format",
      "pnpm lint:css"
    ]
  },
  "dependencies": {
    "@types/react-router-dom": "5.3.0",
    "isomorphic-ws": "4.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-modal": "3.14.3",
    "react-redux": "7.2.5",
    "react-responsive": "9.0.0-beta.4",
    "react-router-dom": "5.3.0",
    "react-spring": "9.2.6",
    "react-use-gesture": "9.1.3",
    "react-virtual": "2.8.2",
    "reconnecting-websocket": "4.4.0",
    "redux": "4.1.1",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@magister_zito/eslint-config-react": "0.0.9",
    "@magister_zito/stylelint-config": "0.0.1",
    "@tailwindcss/line-clamp": "0.2.2",
    "@types/react": "17.0.19",
    "@types/react-dom": "17.0.9",
    "@types/react-modal": "3.12.1",
    "@types/uuid": "8.3.1",
    "@vitejs/plugin-react": "1.0.1",
    "autoprefixer": "10.3.7",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "postcss": "8.3.9",
    "prettier": "2.4.1",
    "sass": "1.42.0",
    "stylelint": "13.13.1",
    "tailwind-scrollbar": "1.3.1",
    "tailwindcss": "2.2.16",
    "typescript": "4.4.2",
    "vite": "2.5.1"
  }
}
