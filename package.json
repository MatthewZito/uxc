{
  "name": "@uxc/monorepo",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Matthew Zito <matthewtzito@gmail.com> (goldmund)",
  "scripts": {
    "dev": "pnpm -r --parallel --filter {packages} run dev",
    "format": "prettier --write \"src/**/*.{ts,tsx,md,css,scss}\"",
    "preview": "vite preview",
    "lint": "pnpm -r --parallel --filter {packages} run lint",
    "lint:css": "stylelint \"src/**/*.{css,scss,ts,tsx}\" --fix"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx,js,jsx}": [
      "pnpm format",
      "pnpm lint"
    ],
    "packages/**/*.{css,scss}": [
      "pnpm format",
      "pnpm lint:css"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@magister_zito/eslint-config": "^0.8.0",
    "@magister_zito/eslint-config-react": "^0.8.0",
    "@magister_zito/stylelint-config": "0.0.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "prettier": "2.4.1",
    "typescript": "4.4.2"
  }
}
