{
  "name": "@uxc/monorepo",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel --filter {packages} run dev",
    "format": "prettier --write \"src/**/*.{ts,tsx,md,css,scss}\"",
    "preview": "vite preview",
    "lint": "eslint --ext .ts,.js,.tsx,.jsx,.json . --fix",
    "lint:css": "stylelint \"src/**/*.{css,scss,ts,tsx}\" --fix"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "pnpm format",
      "pnpm lint"
    ],
    "src/**/*.{css,scss}": [
      "pnpm format",
      "pnpm lint:css"
    ]
  },
  "keywords": [],
  "author": "Matthew Zito <matthewtzito@gmail.com> (goldmund)",
  "license": "MIT",

  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@magister_zito/eslint-config-react": "0.8.0",
    "@magister_zito/stylelint-config": "0.0.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "prettier": "2.4.1", 
    "typescript": "4.4.2"
  }
}
