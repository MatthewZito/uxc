{
  "name": "@uxc/monorepo",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Matthew Zito <matthewtzito@gmail.com> (goldmund)",
  "scripts": {
    "check": "pnpm  --parallel --filter .... run check",
    "dev": "./scripts/dev.bash",
    "format": "pnpm -r --parallel --filter .... run format",
    "lint": "pnpm -r --parallel --filter .... run lint",
    "test": "pnpm --filter {apps/api} run test && pnpm --filter {apps/client} run test:unit"
  },
  "lint-staged": {
    "{apps,libs}/**/*.{ts,tsx,js,jsx}": [
      "pnpm format",
      "pnpm lint"
    ],
    "{apps,libs}/**/*.{css,scss}": [
      "pnpm format",
      "pnpm lint:css"
    ]
  },
  "engines": {
    "node": ">= 16.1.0",
    "pnpm": ">= 6.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@magister_zito/eslint-config": "^0.9.0",
    "@magister_zito/eslint-config-react": "^0.9.0",
    "@magister_zito/stylelint-config": "0.1.0",
    "concurrently": "^7.0.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "prettier": "2.4.1",
    "typescript": "4.4.2"
  }
}
