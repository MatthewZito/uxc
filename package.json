{
  "name": "uxflows",
  "appName": "uxflows",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Matthew Zito (goldmund) <matthewtzito@gmail.com>",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
		"format": "prettier --write \"src/**/*.{ts,tsx,md,css,scss}\"",
    "serve": "vite preview",
    "lint": "eslint --ext .ts,.js,.tsx,.jsx,.json . --fix",
    "lint:css": "stylelint \"src/**/*.{css,scss,ts,tsx}\" --fix"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
			"pnpm format",
      "pnpm lint"
    ],
    "src/**/*.{css,scss}": [
			"pnpm format",
      "pnpm lint:css"
    ]
  },
  "dependencies": {
    "@types/react-router-dom": "5.3.0",
    "@xstate/react": "1.6.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.3.0",
    "xstate": "4.25.0"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@magister_zito/eslint-config-react": "0.0.5",
    "@magister_zito/stylelint-config": "0.0.1",
    "@types/react": "17.0.19",
    "@types/react-dom": "17.0.9",
    "@vitejs/plugin-react": "1.0.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "postcss-import": "14.0.2",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.4.1",
    "sass": "1.42.0",
    "stylelint": "13.13.1",
    "typescript": "4.4.2",
    "vite": "2.5.1",
    "vite-plugin-eslint": "1.3.0"
  }
}
