{
	"compilerOptions": {
		"target": "ESNext",
		"moduleResolution": "node",
		"baseUrl": ".",
    "rootDir": ".",
    "paths": {
			"@/*": [
				"src/*"
			],
			"@@/*": [
				"test/*"
			]
		},
    "esModuleInterop": true,
		"strict": true,
		"resolveJsonModule": true
  },
  "include": [
		"src",
		"test",
		"*.ts"
	]
}
